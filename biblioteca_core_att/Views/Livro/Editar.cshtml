@model biblioteca_core_att.Models.Livro

@{
    ViewData["Title"] = "Biblioteca - Livro";
    var msg = ViewData["msg"];
}

<div>
    <h3 class="center">Editar Livro</h3>
    <br />
    @msg
    <br />

    <form asp-action="Editar">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="LivroID" />
        <div class="row">
            <div class="col-6">
                <label class="texto"> Nome do Livro:</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <label class="texto">Autor:</label>
                <input asp-for="Autor" class="form-control" />
                <span asp-validation-for="Autor" class="text-danger"></span>
            </div>
        </div>

        <br />

        <div class="row">
            <div class="col-2">
                <label class="texto">Idade:</label>
                <input asp-for="Lancamento" class="form-control" type="date" />
                <span asp-validation-for="Lancamento" class="text-danger"></span>
            </div>
        </div>

        <br />

        <input type="submit" value="Confirmar" class="btn btn-outline-primary" />

    </form>
</div>