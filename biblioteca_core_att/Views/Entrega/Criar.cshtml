@model biblioteca_core_att.Models.Entrega

@{
    ViewData["Title"] = "Biblioteca - Reservas";
    var msg = ViewData["msg"];
}

<div>
    <h3 class="center">Cadastrar Reserva</h3>
    <br />
    @msg
    <br />
    <form asp-action="Criar">
        <div class="row">
            <div class="col-4">
                <label class="texto"> Nome de Usuário:</label>
                <select asp-for="UsuarioID" class="form-control" asp-items="ViewBag.UsuarioID"></select>
                <span asp-validation-for="UsuarioID" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-6">
                <label class="texto"> Nome de Livro:</label>
                <select asp-for="LivroID" class="form-control" asp-items="ViewBag.LivroID"></select>
                <span asp-validation-for="LivroID" class="text-danger"></span>
            </div>
        </div>
        <br />

        <input type="submit" value="Confirmar" class="btn btn-outline-primary" />

    </form>
</div>