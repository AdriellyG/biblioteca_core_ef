@model IEnumerable<biblioteca_core_att.Models.Usuario>

@{
    ViewData["Title"] = "Biblioteca - Usuários";
    var msg = ViewData["msg"];
}

<div>
    <h3 class="center">Usuários</h3>
    <br />
    <p class="alert alert-secondary">
        @msg
    </p>

    <br/>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">CPF</th>
                <th scope="col">Idade</th>
                <th scope="col">Email</th>
                <th scope="col">Ações</th>
            </tr> 
        </thead>
        <tbody>
            @foreach (var item in Model)
            { 
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.Cpf</td>
                    <td>@item.Idade</td>
                    <td>@item.Email</td>
                    <td>
                        <a asp-action="Editar" asp-route-id="@item.UsuarioID">Editar</a> |
                        <a asp-action="Excluir" asp-route-id="@item.UsuarioID">Deletar</a>
                     </td>
                </tr>
            }
        </tbody>
    </table>

    <br />

    <p>
        <a asp-action="Criar" class="btn btn-outline-success">Novo Usuário</a>
    </p>

</div>